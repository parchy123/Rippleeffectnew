<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/image1_opt"
   >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >













    <com.bindass.dell.myripple.RippleView
        android:id="@+id/rect1"
        android:layout_width="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content"
        ripple:rv_type="rectangle"
        android:background="@drawable/selector_row"
        android:padding="20dp"
        ripple:rv_zoom="true">

        <TextView
            android:id="@+id/rect_child1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Get started "
            android:background="@android:color/holo_green_light"/>

    </com.bindass.dell.myripple.RippleView>
    <com.bindass.dell.myripple.RippleView
        android:id="@+id/rect2"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rect1"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content"
        ripple:rv_type="rectangle"
        android:background="@drawable/selector_row"
        android:padding="20dp"

        ripple:rv_zoom="true">

        <TextView
            android:id="@+id/rect_child2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Latest Tech news"
            android:background="@android:color/holo_green_light"/>

    </com.bindass.dell.myripple.RippleView>
    <com.bindass.dell.myripple.RippleView
        android:id="@+id/rect3"
        android:layout_width="wrap_content"
        android:layout_below="@+id/rect2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content"
        ripple:rv_type="rectangle"
        android:background="@drawable/selector_row"
        android:padding="20dp"
        ripple:rv_zoom="true">

        <TextView
            android:id="@+id/rect_child3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Some JAVA Basics"
            android:background="@android:color/holo_green_light"/>

    </com.bindass.dell.myripple.RippleView>
    <com.bindass.dell.myripple.RippleView
        android:id="@+id/rect4"
        android:layout_width="wrap_content"
        android:layout_below="@+id/rect3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content"
        ripple:rv_type="rectangle"
        android:background="@drawable/selector_row"
        android:padding="20dp"
        ripple:rv_zoom="true">

        <TextView
            android:id="@+id/rect_child4"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Android Quiz"
            android:background="@android:color/holo_green_light"/>

    </com.bindass.dell.myripple.RippleView>
    <com.bindass.dell.myripple.RippleView
        android:id="@+id/rect5"
        android:layout_width="wrap_content"
        android:layout_below="@+id/rect4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content"
        ripple:rv_type="rectangle"
        android:background="@drawable/selector_row"
        android:padding="20dp"
        ripple:rv_zoom="true">

        <TextView
            android:id="@+id/rect_child5"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:text="About Us"
            android:background="@android:color/holo_green_light"/>

    </com.bindass.dell.myripple.RippleView>




    <android.support.v7.widget.RecyclerView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/recycler_view" android:layout_below="@+id/rect4" android:scrollbars="vertical"/>
</RelativeLayout>
</ScrollView>